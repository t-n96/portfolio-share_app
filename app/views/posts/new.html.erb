<div class="container">
  <div class="container__post">
    <p>画像を選択してください</p>
    <%= form_with model: @post, local: true, url: {action: 'confirm'} do |f| %>
      <div class="container__post-content">
        <div class="image">
        <%= f.label :post_image do %>
          <% if @post.post_image.present? %>
            <%= image_tag @post.post_image, class: "post_image" %>
          <% else %>
            <%= image_tag 'image_upload_sample.jpg', class: "post_image" %>
          <% end %>
          <%= f.file_field :post_image, style:"display:none", class: "uploader" %>
        <% end %>
        </div>
        <div class="content">
          <p><%= f.text_field :title, placeholder: "タイトル", class: "form" %></p>
          <p><%= f.text_area :introduction, placeholder: "コーデの説明文を追加する", size: '15x1', class: "form"  %></p>
          <p><%= f.submit "確認画面へ" %></p>
        </div>
      </div>
    <% end %>
  </div
</div>

<div class="container">
  <div class="container__post">
    <p class="post-title">新規作成</p>
    <%= form_with model: @post, local: true, url: confirm_posts_path(@post) do |f| %>
      <div class="container__post-content">
        <div class="image">
        <%= f.label :post_image do %>
          <% if @post.post_image.present? %>
            <%= image_tag @post.post_image.url, class: "post_image" %>
          <% else %>
            <%= image_tag 'upload-image.png', class: "post_image" %>
          <% end %>
          <%= f.file_field :post_image, style:"display:none", class: "uploader" %>
          <%= f.hidden_field :post_image_cache %>
        <% end %>
        </div>
        <div class="content">
          <p><%= f.text_field :title, placeholder: "コーデタイトル", class: "form-text" %></p>
          <p><%= f.text_area :introduction, placeholder: text_placeholder, size: '15x7', class: "form-area" %></p>
          <p><%= f.submit "確認画面へ", class:"form-btn" %></p>
        </div>
      </div>
    <% end %>
  </div
</div>

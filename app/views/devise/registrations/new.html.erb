<%= render "devise/shared/error_messages", resource: resource %>
<div class="login-container">
  <div class="login-content">
    <p class="login-title">新規登録</p>
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class:"login-field" %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login-field" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "ps-label" %>
          <% if @minimum_password_length %>
            <% @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"login-field" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"login-field" %>
        </div>

        <div class="actions-new">
          <%= f.submit "新規登録する" , class:"actions-btn"%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
